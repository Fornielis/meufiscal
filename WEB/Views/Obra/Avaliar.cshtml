@model Avaliacao
@{
    ViewData["Title"] = "MEU FISCAL";
}

<div class="containe">
    <div class="row mt-4">
        <section class="col-12 col-sm-4">

            <form asp-controller="Obra" asp-action="Avaliar" role="form" method="post">

                <input type="hidden" asp-for="ObraId" value="@Model.ObraId" />

                <div class="mb-4">
                    <img class="icone-web d-inline" src="~/img/ICONE.svg" />
                    <h5 class="d-inline">Avaliar Obra - @Model.ObraId</h5>
                    <hr class="mb-3" />
                </div>

                <div asp-validation-summary="All" class="text-danger mb-4"></div>

                <div class="form-floating mb-3">
                    <select class="form-select" id="floatingSelect" asp-for="CorrigidoAto">
                        <option value="">Escolha</option>
                        <option value="SIM">SIM</option>
                        <option value="NÃO">NÃO</option>
                    </select>
                    <label>Correção no Ato</label>
                </div>

                <div class="form-floating mb-3">
                    <select class="form-select" id="floatingSelect" asp-for="SPR">
                        <option value="">Escolha</option>
                        <option value="SIM">SIM</option>
                        <option value="NÃO">NÃO</option>
                    </select>
                    <label>Necessidade SPR</label>
                </div>

                <div class="form-floating mb-3">
                    <select class="form-select" id="floatingSelect" asp-for="Risco">
                        <option value="">Escolha</option>
                        <option value="SIM">SIM</option>
                        <option value="NÃO">NÃO</option>
                    </select>
                    <label>Apresenta Risco</label>
                </div>

                <div class="form-floating mb-4">
                    <textarea class="form-control text-uppercase" placeholder="Leave a comment here" id="floatingTextarea2" style="height: 100px" asp-for="Descricao"></textarea>
                    <label>Descrição</label>
                </div>


                <div class="col-12 mb-4 mt-4">
                    <a class="col-5 btn btn-outline-secondary" asp-controller="Obra" asp-action="Lista">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-return-left" viewBox="0 0 16 16">
                            <path fill-rule="evenodd" d="M14.5 1.5a.5.5 0 0 1 .5.5v4.8a2.5 2.5 0 0 1-2.5 2.5H2.707l3.347 3.346a.5.5 0 0 1-.708.708l-4.2-4.2a.5.5 0 0 1 0-.708l4-4a.5.5 0 1 1 .708.708L2.707 8.3H12.5A1.5 1.5 0 0 0 14 6.8V2a.5.5 0 0 1 .5-.5z" />
                        </svg>
                        VOLTAR
                    </a>
                    <button class="col-5 float-end btn btn-outline-success" type="submit">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-save2-fill" viewBox="0 0 16 16">
                            <path d="M8.5 1.5A1.5 1.5 0 0 1 10 0h4a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V2a2 2 0 0 1 2-2h6c-.314.418-.5.937-.5 1.5v6h-2a.5.5 0 0 0-.354.854l2.5 2.5a.5.5 0 0 0 .708 0l2.5-2.5A.5.5 0 0 0 10.5 7.5h-2v-6z" />
                        </svg>
                        SALVAR
                    </button>
                </div>

                <hr />

            </form>
        </section>
    </div>
</div>

