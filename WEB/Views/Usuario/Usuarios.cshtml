@model UsuarioViewModel

@{
    ViewData["Title"] = "Usuário";
}

<div class="containe">
    <div class="row mt-4">
        <section class="col-12 col-sm-4">

            <form asp-controller="Usuario" asp-action="Usuarios" role="form" method="post">

                <input type="hidden" asp-for="Email" value="meufiscal@meufiscal.com">

                <div class="mb-4">
                    <img class="icone-web d-inline" src="~/img/ICONE.svg" />
                    <h5 class="d-inline">Novo Usuário</h5>
                    <hr class="mb-3" />
                </div>

                <div asp-validation-summary="All" class="text-danger mb-4"></div>

                <div class="form-floating mb-3">
                    <input type="text" class="form-control text-uppercase" id="floatingInput" placeholder="name@example.com" asp-for="Usuario" value="">
                    <label>Usuário</label>
                </div>

                <div class="form-floating mb-3">
                    <input type="password" class="form-control text-uppercase" id="floatingInput" placeholder="name@example.com" asp-for="Senha" value="">
                    <label>Senha</label>
                </div>

                <div class="form-floating mb-3">
                    <select class="form-select" id="floatingSelect" asp-for="Role">
                        <option value="" selected>Selecione uma Role</option>
                        <option value="ADM">ADM</option>
                        <option value="FIS">FISCAL</option>

                    </select>
                    <label>Role</label>
                </div>

                <div class="col-12 mb-4">
                    <a class="col-5 btn btn-outline-secondary" asp-controller="Obra" asp-action="Lista">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-return-left" viewBox="0 0 16 16">
                            <path fill-rule="evenodd" d="M14.5 1.5a.5.5 0 0 1 .5.5v4.8a2.5 2.5 0 0 1-2.5 2.5H2.707l3.347 3.346a.5.5 0 0 1-.708.708l-4.2-4.2a.5.5 0 0 1 0-.708l4-4a.5.5 0 1 1 .708.708L2.707 8.3H12.5A1.5 1.5 0 0 0 14 6.8V2a.5.5 0 0 1 .5-.5z" />
                        </svg>
                        VOLTAR
                    </a>
                    <button class="col-5 float-end btn btn-outline-success" type="submit">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-save2-fill" viewBox="0 0 16 16">
                            <path d="M8.5 1.5A1.5 1.5 0 0 1 10 0h4a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V2a2 2 0 0 1 2-2h6c-.314.418-.5.937-.5 1.5v6h-2a.5.5 0 0 0-.354.854l2.5 2.5a.5.5 0 0 0 .708 0l2.5-2.5A.5.5 0 0 0 10.5 7.5h-2v-6z" />
                        </svg>
                        SALVAR
                    </button>
                </div>

                <hr />

            </form>
        </section>

        <section class="col-12 col-sm-8">

            <table class="table table-striped">
                <thead >
                    <tr>
                        <th>Usuário</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var Item in Model.listaUsuario)
                    {
                        <tr>
                            <td>@Item.UserName.ToUpper()</td>
                        </tr>
                    }

                </tbody>
            </table>

        </section>
    </div>
</div>